@using System.Threading
@inherits LayoutComponentBase
@inject HttpClient _httpClient
@inject IJSRuntime js
@inject ProviderRefreshService _providerRefresh

<div class="page">
    <div class="sidebar">
        <select @onchange="ProviderChange">
            <option value="pgsql" selected="selected">Postgresql</option>
            <option value="mysql">MySql</option>
            <option value="sqlite">Sqlite</option>
        </select>
        <NavMenu />
    </div>

    <div class="main">
        <div class="content px-4">
            <CascadingValue Value="@provider">
                @Body
            </CascadingValue>
        </div>
    </div>
</div>

@code {
    private string provider { get; set; } = "pgsql";

    private void ProviderChange(ChangeEventArgs eventArgs) 
    {
        provider = eventArgs.Value.ToString();
        _providerRefresh.CallRequestRefresh();
    }
}